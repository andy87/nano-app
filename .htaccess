<IfModule mod_rewrite.c>
   Options +FollowSymlinks
   RewriteEngine On

   RewriteCond %{REQUEST_URI} ^/(img|css|js|plugins)
   RewriteRule ^img/(.*)$ static/img/$1 [L]
   RewriteRule ^css/(.*)$ static/css/$1 [L]
   RewriteRule ^js/(.*)$ static/js/$1 [L]
   RewriteRule ^plugins/(.*)$ static/plugins/$1 [L]

   RewriteCond %{REQUEST_URI} !^/public/(css|js|images|plugins)/
   RewriteCond %{REQUEST_URI} !nano.php
   RewriteCond %{REQUEST_FILENAME} !-f [OR]
   RewriteCond %{REQUEST_FILENAME} !-d
   RewriteRule ^(.*)$ nano.php
</IfModule>

